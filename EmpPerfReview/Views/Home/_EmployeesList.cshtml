<script>
    function showReview() {
        var show = document.getElementById("empreview").style.display;
        if(show == "none")
            document.getElementById("empreview").style.display = "block";
        else
            document.getElementById("empreview").style.display = "none";
}
</script>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: employees">
        <tr>
            <td data-bind="text: FullName"></td>
            <td data-bind="text: Age"></td>
            <td data-bind="text: Gender"></td>
            <td data-bind="text: EmpRole"></td>
            <td><input type="button" class="btn btn-link btn-xs" value=" Review " onclick="showReview()"/></td>
            <td><input type="button" class="btn btn-link btn-xs" value=" Update " /></td>
            <td><input type="button" class="btn btn-danger btn-xs" value=" [x] delete " data-bind="click: $parent.removeEmployee" /></td>
        </tr>
    </tbody>
</table>

<br />

<input type="button" class="btn btn-default" id="btnGetEmployees" value="Refresh" data-bind="click: getEmployees" />
